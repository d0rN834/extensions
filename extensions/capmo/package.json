{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "capmo-tickets",
  "version": "1.0.0",
  "type": "module",
  "title": "Capmo",
  "description": "List and filter tickets from Capmo.",
  "icon": "extension-icon.png",
  "author": "justus_feldhaus",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "list-tickets",
      "title": "List Tickets",
      "subtitle": "Capmo",
      "description": "Display tickets from Capmo.",
      "mode": "view"
    },
    {
      "name": "list-projects",
      "title": "List Projects",
      "subtitle": "Capmo",
      "description": "Display all projects (non-archived) from Capmo.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "type": "password",
      "name": "capmoApiToken",
      "title": "Capmo API Token",
      "description": "Your Capmo API Token",
      "required": true
    },
    {
      "type": "textfield",
      "name": "excludedProjects",
      "title": "Excluded Projects",
      "description": "Comma-separated list of project IDs to exclude",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.88.4",
    "@raycast/utils": "^1.18.1",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^8.57.1",
    "prettier": "^3.4.2",
    "typescript": "5.3"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "lint": "eslint src",
    "fix-lint": "eslint src --fix",
    "publish": "npx @raycast/api@latest publish"
  }
}
